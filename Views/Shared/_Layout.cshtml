<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
@{
    bool mostrarHeaderLanding = ViewData["mostrarHeaderLanding"] as bool? ?? false;
}
    <header>
    @if(!mostrarHeaderLanding)
    {


    <nav class="navbar-custom">
        <div class="nav-left">
            <img src="~/Content/Images/logo_tandem.png" alt="Logo Tandem" class="nav-logo">
        </div>

        <div class="nav-center">
            <a href='@Url.Action("Actividades", "Home")' class="nav-btn">ACTIVIDADES</a>
            <a href='@Url.Action("Nosotros", "Home")' class="nav-btn">NOSOTROS</a>
        </div>

        <div class="nav-right">
            <i class="fa-solid fa-user nav-icon"></i>
            <i class="fa-solid fa-bell nav-icon"></i>
            <button class="menu-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                <i class="fa-solid fa-bars"></i>
            </button>
        </div>
    </nav>

    <!-- Menú lateral -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menú</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item"><a href='@Url.Action("Home", "Home")' class="nav-link active">Home</a></li>
                <li class="nav-item"><a href='@Url.Action("Favoritos", "Home")' class="nav-link">Favoritos</a></li>
                <li class="nav-item"><a href='@Url.Action("MisPertenecientes", "Home")' class="nav-link">Mis pertenecientes</a></li>
                <li class="nav-item"><a href='@Url.Action("Ayuda", "Home")' class="nav-link">Ayuda</a></li>
                <li class="nav-item"><a href='@Url.Action("Perfil", "Home")' class="nav-link">Mi perfil</a></li>
                <li class="nav-item"><a href='@Url.Action("CerrarSesion", "Home")' class="nav-link">Cerrar sesión</a></li>
            </ul>
        </div>
    </div>
    }
    else
    {
<nav class="navbar bg-body-tertiary">
              <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand">
                  <img src="/Imagenes/LOGO 2.png" alt="Logo">
                </a>
             <form asp-controller="Account" asp-action="LogIn1" method="get">
                    <button type="submit" class="nav-btn">Iniciar Sesión</button>
                </form>
                <form asp-controller="Account" asp-action="Registrarse1" method="get">
                    <button type="submit" class="nav-btn">Registrarse</button>
                </form>
                  
            </div>
        </nav>
    }
</header>
        

    
   

    <main role="main">
        @RenderBody()
    </main>
  
    <footer>
       <Section>
       <img class="logo" src="wwwroot\Imagenes\LOGO 2.png" alt="Logo">

        <div class="footerDiv">
            <h2 >Tandem</h2>
            <p >Avanzamos Juntos</p>
          </div>
   
       <div class="footerDiv">
          <div >
            <a href="https://www.instagram.com/tobi_turquie/" ><img src="wwwroot\Imagenes\IMG_3056.jpg" alt="IG"></a>
            <a href="https://www.tiktok.com/es/" ><img src="wwwroot\Imagenes\IMG_3055.PNG" alt="TikTOk"></a>
            <a href="https://www.facebook.com/?locale=es_LA"><img src="wwwroot\Imagenes\IMG_3057.jpg" alt="Facebook"></a>
          </div>
      </div>
  
    <div class="footerDiv">
          <h3 >Contacto</h3>
          <p >✉️ Hablanos@Tandem.com</p>
          <p >☎️ +54 11 4567 8932 </p>
          <p >📍 AV. Libertador 2450 </p>
       </div>
  
   
    <div class="footerDerechos">
     
      <p >© 2025 Tandem. Todos los derechos reservados.</p>
    </div>
  </Section>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>

</body>

</html>
