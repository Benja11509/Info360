@using Info360.Models 
@using System.Linq

@{
    ViewData["Title"] = "Estad√≠sticas";
    
    // ===============================================
    // C√ÅLCULOS: DATOS DE ACTIVIDADES (SECCI√ìN 1 - NO TOCAR)
    // ===============================================
    List<TiempoDiario> tiemposActividades = ViewBag.TiempoDiario as List<TiempoDiario>; 
    
    // Declaraci√≥n en el scope principal para evitar CS0103
    TimeSpan tiempoActividadesPromedioNeto = TimeSpan.Zero;
    TimeSpan tiempoActividadesMaximoNeto = TimeSpan.Zero;
    int totalDiasActividades = 0;
    TimeSpan tiempoTotalActividades = TimeSpan.Zero;
    
    if (tiemposActividades != null && tiemposActividades.Any())
    {
        totalDiasActividades = tiemposActividades.Count;
        double promedioSegundosAct = tiemposActividades.Average(t => (double)t.Tiempo);
        tiempoActividadesPromedioNeto = TimeSpan.FromSeconds(promedioSegundosAct);
       double totalSegundosReales = tiemposActividades.Sum(t => (double)t.Tiempo);
 tiempoTotalActividades = TimeSpan.FromSeconds(totalSegundosReales);
    }
    
    // ===============================================
    // C√ÅLCULO: TIEMPO ACUMULADO TOTAL (M√©trica Maestra)
    // ===============================================
    TimeSpan tiempoTotalAppAcumulado = ViewBag.TiempoTotalAppAcumulado ?? TimeSpan.Zero;
    
    ViewData["mostrarHeaderLanding"] = false;
    ViewData["mostrarHeaderTutor"] = true;
    ViewData["mostrarHeaderPerteneciente"] = false;
    
}

<div class="container my-5">
    
   
    
    @* ============================================== *@
    @* SECCI√ìN 1: TIEMPO EN ACTIVIDADES (Dashboards de M√°ximo/Promedio + Detalle) *@
    @* Esta secci√≥n se mantuvo con el formato original del usuario (Max/Avg/Detalle) *@
    @* ============================================== *@
    <div class="seccion-dashboard mb-5">
        <h3 class="col-12 text-primary titulo-seccion">Tiempo en Actividades</h3>
        
        @if (tiemposActividades != null && tiemposActividades.Any())
        {
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card card-resumen border-primary">
                        <div class="card-body">
                            <h5 class="card-title text-primary">D√≠as con Actividad üìÖ</h5>
                            <p class="card-text display-4">@totalDiasActividades</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card card-resumen border-success">
                        <div class="card-body">
                            <h5 class="card-title text-success">M√°ximo Tiempo Actividad ‚è±Ô∏è</h5>
                            <p class="card-text display-4">@tiempoTotalActividades.ToString(@"hh\:mm\:ss")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card card-resumen border-warning">
                        <div class="card-body">
                            <h5 class="card-title text-warning">Promedio Diario Actividad ‚è≥</h5>
                            <p class="card-text display-4">@tiempoActividadesPromedioNeto.ToString(@"hh\:mm\:ss")</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <h4 class="text-secondary mb-3 t_listado">Detalle de Actividades por D√≠a</h4>

            <ul class="list-group list-group-flush mb-5">
                @foreach(var tiempoDiario in tiemposActividades.OrderByDescending(t => t.Fecha))
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-light">
                        <span class="font-weight-bold fecha-detalle">@tiempoDiario.Fecha.ToString("dd/MM/yyyy")</span>
                        <span class="badge badge-pill badge-primary badge-tiempo">Tiempo: @tiempoDiario.TiempoNeto.ToString(@"hh\:mm\:ss")</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="alert alert-info mt-4 text-center">No hay registros de tiempo en Actividades.</div>
        }
    </div>


    <hr class="my-5">

</div>