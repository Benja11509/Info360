@using Info360.Models 
@using System.Linq

@{
    ViewData["Title"] = "Estad√≠sticas";
    
    // ===============================================
    // C√ÅLCULOS: DATOS DE ACTIVIDADES (SECCI√ìN 1 - NO TOCAR)
    // ===============================================
    List<TiempoDiario> tiemposActividades = ViewBag.TiempoDiario as List<TiempoDiario>; 
    
    // Declaraci√≥n en el scope principal para evitar CS0103
    TimeSpan tiempoActividadesPromedioNeto = TimeSpan.Zero;
    TimeSpan tiempoActividadesMaximoNeto = TimeSpan.Zero;
    int totalDiasActividades = 0;
    
    if (tiemposActividades != null && tiemposActividades.Any())
    {
        totalDiasActividades = tiemposActividades.Count;
        double promedioSegundosAct = tiemposActividades.Average(t => (double)t.Tiempo);
        tiempoActividadesPromedioNeto = TimeSpan.FromSeconds(promedioSegundosAct);
        tiempoActividadesMaximoNeto = tiemposActividades.Max(t => t.TiempoNeto); 
    }
    
    // ===============================================
    // C√ÅLCULO: TIEMPO ACUMULADO TOTAL (M√©trica Maestra)
    // ===============================================
    TimeSpan tiempoTotalAppAcumulado = ViewBag.TiempoTotalAppAcumulado ?? TimeSpan.Zero;
}

<div class="container my-5">
    
    <h2 class="text-center mb-5 t_grafica">Dashboard de Resumen de Tiempos</h2>

    @* ============================================== *@
    @* TARJETA 0: TIEMPO TOTAL ACUMULADO (M√©trica Maestra) *@
    @* ============================================== *@
    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
             <div class="card card-resumen border-danger">
                <div class="card-body text-center">
                    <h5 class="card-title text-danger">Tiempo Total ACUMULADO en la Aplicaci√≥n üèÜ</h5>
                    <p class="card-text display-4">@tiempoTotalAppAcumulado.ToString(@"dd\.hh\:mm\:ss")</p>
                    <p class="card-text text-muted">D√≠as.Horas:Minutos:Segundos</p>
                </div>
            </div>
        </div>
    </div>
    
    @* ============================================== *@
    @* SECCI√ìN 1: TIEMPO EN ACTIVIDADES (Dashboards de M√°ximo/Promedio + Detalle) *@
    @* Esta secci√≥n se mantuvo con el formato original del usuario (Max/Avg/Detalle) *@
    @* ============================================== *@
    <div class="seccion-dashboard mb-5">
        <h3 class="col-12 text-primary titulo-seccion">M√©tricas de Tiempo en Actividades üß†</h3>
        
        @if (tiemposActividades != null && tiemposActividades.Any())
        {
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card card-resumen border-primary">
                        <div class="card-body">
                            <h5 class="card-title text-primary">D√≠as con Actividad üìÖ</h5>
                            <p class="card-text display-4">@totalDiasActividades</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card card-resumen border-success">
                        <div class="card-body">
                            <h5 class="card-title text-success">M√°ximo Tiempo Actividad ‚è±Ô∏è</h5>
                            <p class="card-text display-4">@tiempoActividadesMaximoNeto.ToString(@"hh\:mm\:ss")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card card-resumen border-warning">
                        <div class="card-body">
                            <h5 class="card-title text-warning">Promedio Diario Actividad ‚è≥</h5>
                            <p class="card-text display-4">@tiempoActividadesPromedioNeto.ToString(@"hh\:mm\:ss")</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <h4 class="text-secondary mb-3 t_listado">Detalle de Actividades por D√≠a</h4>

            <ul class="list-group list-group-flush mb-5">
                @foreach(var tiempoDiario in tiemposActividades.OrderByDescending(t => t.Fecha))
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-light">
                        <span class="font-weight-bold fecha-detalle">@tiempoDiario.Fecha.ToString("dd/MM/yyyy")</span>
                        <span class="badge badge-pill badge-primary badge-tiempo">Tiempo: @tiempoDiario.TiempoNeto.ToString(@"hh\:mm\:ss")</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="alert alert-info mt-4 text-center">No hay registros de tiempo en Actividades.</div>
        }
    </div>


    <hr class="my-5">


    @* ============================================== *@
    @* SECCI√ìN 2: TIEMPO TOTAL EN LA APP (DETALLE -> PROMEDIO) *@
    @* Usamos la lista de Actividades (ViewBag.TiempoDiario) para el detalle diario *@
    @* ============================================== *@
    <div class="seccion-dashboard">
        <h3 class="col-12 text-info titulo-seccion">Detalle y Promedio de Uso Diario de la Aplicaci√≥n üíª</h3>

        @if (tiemposActividades != null && tiemposActividades.Any())
        {
            @* 1. DETALLE D√çA POR D√çA (LISTA) *@
             <div class="row mb-4">
                <div class="col-12">
                    <ul class="list-group list-group-flush listado-detalle-tiempo">
                        @foreach(var tiempoDiario in tiemposActividades.OrderByDescending(t => t.Fecha))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    @* Muestra el D√çA *@
                                    <span class="font-weight-bold fecha-detalle">@tiempoDiario.Fecha.ToString("dd/MM/yyyy")</span>
                                    <span class="text-muted ml-3">Tiempo de uso registrado:</span>
                                </div>
                                @* Muestra CU√ÅNTO TARD√ì ESE D√çA *@
                                <span class="badge badge-pill badge-info badge-tiempo">@tiempoDiario.TiempoNeto.ToString(@"hh\:mm\:ss")</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            @* 2. TARJETA DE RESUMEN: PROMEDIO (Abajo de la lista, alineada a la derecha) *@
            <div class="row justify-content-end mt-4">
                <div class="col-md-5 col-lg-4"> 
                    <div class="card card-resumen border-secondary">
                        <div class="card-body">
                            <h5 class="card-title text-secondary">Promedio Diario de Uso ‚è±Ô∏è</h5>
                            @* USAMOS las variables DE LA SECCI√ìN 1, que est√°n en el ALCANCE correcto *@
                            <p class="card-text display-4">@tiempoActividadesPromedioNeto.ToString(@"hh\:mm\:ss")</p>
                            <p class="card-text text-muted">(@totalDiasActividades d√≠as registrados)</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info mt-4 text-center">No hay registros de tiempo total en la aplicaci√≥n.</div>
        }
    </div>
</div>