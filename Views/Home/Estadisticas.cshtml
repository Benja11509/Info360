@using Info360.Models 
@using System.Linq

@{
    ViewData["Title"] = "Estad√≠sticas";
    
    // ===============================================
    // C√ÅLCULOS: DATOS DE ACTIVIDADES (tiemposActividades)
    // ===============================================
    List<TiempoDiario> tiemposActividades = ViewBag.TiempoDiario as List<TiempoDiario>; 
    
    TimeSpan tiempoActividadesPromedioNeto = TimeSpan.Zero;
    TimeSpan tiempoActividadesMaximoNeto = TimeSpan.Zero;
    int totalDiasActividades = 0;
    
    if (tiemposActividades != null && tiemposActividades.Any())
    {
        totalDiasActividades = tiemposActividades.Count;
        double promedioSegundosAct = tiemposActividades.Average(t => (double)t.Tiempo);
        tiempoActividadesPromedioNeto = TimeSpan.FromSeconds(promedioSegundosAct);
        tiempoActividadesMaximoNeto = tiemposActividades.Max(t => t.TiempoNeto); 
    }
    
    // ===============================================
    // C√ÅLCULOS: DATOS DE TIEMPO TOTAL EN LA APP (tiemposAppRegistrados)
    // ===============================================
    // Usamos el nuevo ViewBag del Controller.
    List<TiempoDiario> tiemposAppRegistrados = ViewBag.TiemposAppDiarios as List<TiempoDiario>;
    
    TimeSpan tiempoAppPromedioNeto = TimeSpan.Zero;
    TimeSpan tiempoAppMaximoNeto = TimeSpan.Zero;
    int totalDiasApp = 0;

    if (tiemposAppRegistrados != null && tiemposAppRegistrados.Any())
    {
        totalDiasApp = tiemposAppRegistrados.Count;
        double promedioSegundosApp = tiemposAppRegistrados.Average(t => (double)t.Tiempo);
        tiempoAppPromedioNeto = TimeSpan.FromSeconds(promedioSegundosApp);
        tiempoAppMaximoNeto = tiemposAppRegistrados.Max(t => t.TiempoNeto);
    }
    
    // ===============================================
    // C√ÅLCULO: TIEMPO ACUMULADO TOTAL (M√©trica √önica)
    // ===============================================
    TimeSpan tiempoTotalAppAcumulado = ViewBag.TiempoTotalAppAcumulado ?? TimeSpan.Zero;
}

<div class="container my-5">
    
    
    
    
    @* ============================================== *@
    @* SECCI√ìN 1: TIEMPO EN ACTIVIDADES (Max/Avg/Detalle) *@
    @* ============================================== *@
    <div class="seccion-dashboard">
        <h3 class="col-12 text-primary titulo-seccion">M√©tricas de Tiempo en Actividades üß†</h3>
        
        @if (tiemposActividades != null && tiemposActividades.Any())
        {
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card card-resumen border-primary">
                        <div class="card-body">
                            <h5 class="card-title text-primary">D√≠as con Actividad üìÖ</h5>
                            <p class="card-text display-4">@totalDiasActividades</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card card-resumen border-success">
                        <div class="card-body">
                            <h5 class="card-title text-success">M√°ximo Tiempo Actividad ‚è±Ô∏è</h5>
                            <p class="card-text display-4">@tiempoActividadesMaximoNeto.ToString(@"hh\:mm\:ss")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card card-resumen border-warning">
                        <div class="card-body">
                            <h5 class="card-title text-warning">Promedio Diario Actividad ‚è≥</h5>
                            <p class="card-text display-4">@tiempoActividadesPromedioNeto.ToString(@"hh\:mm\:ss")</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <h4 class="text-secondary mb-3 t_listado">Detalle de Actividades por D√≠a</h4>

            <ul class="list-group list-group-flush mb-5">
                @foreach(var tiempoDiario in tiemposActividades.OrderByDescending(t => t.Fecha))
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-light">
                        <span class="font-weight-bold fecha-detalle">@tiempoDiario.Fecha.ToString("dd/MM/yyyy")</span>
                        <span class="badge badge-pill badge-primary badge-tiempo">Tiempo: @tiempoDiario.TiempoNeto.ToString(@"hh\:mm\:ss")</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="alert alert-info mt-4 text-center">No hay registros de tiempo en Actividades.</div>
        }
    </div>


    <hr class="my-5">


    @* ============================================== *@
    @* SECCI√ìN 2: TIEMPO TOTAL EN LA APP (Max/Avg/Detalle) *@
    @* ============================================== *@
    <div class="seccion-dashboard">
        <h3 class="col-12 text-info titulo-seccion">M√©tricas de Uso de la Aplicaci√≥n (Diario) üíª</h3>

      
      
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card card-resumen border-info">
                        <div class="card-body">
                            <h5 class="card-title text-info">D√≠as de Uso Registrados üóìÔ∏è</h5>
                            <p class="card-text display-4">@totalDiasApp</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card card-resumen border-danger">
                        <div class="card-body">
                            <h5 class="card-title text-danger">M√°ximo Tiempo Diario ‚è∞</h5>
                            <p class="card-text display-4">@tiempoAppMaximoNeto.ToString(@"hh\:mm\:ss")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card card-resumen border-secondary">
                        <div class="card-body">
                            <h5 class="card-title text-secondary">Promedio Diario de Uso ‚è±Ô∏è</h5>
                            <p class="card-text display-4">@tiempoAppPromedioNeto.ToString(@"hh\:mm\:ss")</p>
                        </div>
                    </div>
                </div>
            </div>

            <h4 class="text-secondary mb-3 t_listado">Detalle de Uso Total por D√≠a</h4>

            <ul class="list-group list-group-flush">
                @foreach(var tiempoDiario in tiemposAppRegistrados.OrderByDescending(t => t.Fecha))
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-light">
                        <span class="font-weight-bold fecha-detalle">@tiempoDiario.Fecha.ToString("dd/MM/yyyy")</span>
                        <span class="badge badge-pill badge-info badge-tiempo">Tiempo: @tiempoDiario.TiempoNeto.ToString(@"hh\:mm\:ss")</span>
                    </li>
                }
            </ul>
        

       
    </div>
</div>