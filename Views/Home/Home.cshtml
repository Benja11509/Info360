    <a href='@Url.Action("Actividades", "Home")' class="botonComenzarAct">Comenzar Actividad</a>
</div>

<div class="carousel-container">
    <button class="carousel-btn prev">&#10094;</button>

    <div class="carousel">
        <div class="card">
            <img src="~/Imagenes/descubre_El_Lugar.png" alt="Descubre el lugar">
            <h3>DESCUBRE EL LUGAR</h3>
            <a href="#" class="btn-continuar">Continuar</a>
        </div>
        <div class="card">
            <img src="~/imagenes/opuesto.png" alt="Elige el opuesto">
            <h3>ELIGE EL OPUESTO</h3>
            <a href="#" class="btn-continuar">Continuar</a>
        </div>
        <div class="card">
            <img src="~/imagenes/escucha.png" alt="Escucha y elige">
            <h3>ESCUCHA Y ELIGE</h3>
            <a href="#" class="btn-continuar">Continuar</a>
        </div>
    </div>

    <button class="carousel-btn next">&#10095;</button>

    <div class="carousel-dots">
        <span class="dot active"></span>
        <span class="dot"></span>
        <span class="dot"></span>
    </div>
</div>

<script>
    const carousel = document.querySelector('.carousel');
    const dots = document.querySelectorAll('.dot');
    const prev = document.querySelector('.prev');
    const next = document.querySelector('.next');
    let index = 0;

    function updateCarousel() {
        carousel.style.transform = `translateX(-${index * 100}%)`;
        dots.forEach(dot => dot.classList.remove('active'));
        dots[index].classList.add('active');
    }

    next.addEventListener('click', () => {
        index = (index + 1) % dots.length;
        updateCarousel();
    });

    prev.addEventListener('click', () => {
        index = (index - 1 + dots.length) % dots.length;
        updateCarousel();
    });
</script>

<div class="ir a Chats">
    <h2>¿Ya hablaste con alguien hoy?</h2>
    <img src="~/Content/Images/fotoChats.png" alt="Logo Tandem" class="nav-logo">
